<Window x:Class="EvgRed01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EvgRed01"
        mc:Ignorable="d"
        Title="EvgRed V01" Height="768" Width="1024"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Icon="Concrete32.ico"
        WindowStyle="ThreeDBorderWindow">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="250*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*"/>
            <RowDefinition Height="250*"/>
            <RowDefinition Height="25*"/>
        </Grid.RowDefinitions>
        <Image x:Name="mainPict" Grid.Row="1" Grid.Column="1" Stretch="None" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <StackPanel Grid.Column="2" Grid.Row="1">
            <Button x:Name="LoadButton" Content="Загрузить" IsDefault="True" Width="100" Click="loadFile" Cursor="Hand"/>
            <Button x:Name="escButton" Margin="0,1,0,0" Content="Выход" IsCancel="True" Width="100" Click="exitApp" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
