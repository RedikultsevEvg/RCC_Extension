<UserControl x:Class="StartWPF.CalcTypeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StartWPF"
             mc:Ignorable="d" 
             d:DesignHeight="143" d:DesignWidth="180">
    <Button x:Name="btnRCC" Height="133" Margin="5" VerticalAlignment="Top" Click="btnRCC_Click">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Image x:Name="imgCalcTypeImage" Height="93" Stretch="Fill" Width="140" Source="Bridge.jpg"/>
            <Label x:Name="lbCalcTypeName" Grid.Row ="1 "  Content="Железобетон" HorizontalAlignment="Center" />
        </Grid>
    </Button>
</UserControl>
