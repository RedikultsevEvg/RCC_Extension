<Window x:Class="RDUIL.WPF_Windows.wndSteelBaseBolts"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDUIL.WPF_Windows"
        xmlns:Convert="clr-namespace:RDUIL.Converters"
        mc:Ignorable="d"
        Title="Болты" Height="450" Width="600" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Convert:LinearSizeConverter x:Key="LinearSizeConverter"/>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />
        <DataTemplate x:Key="BoltTemplate" x:Name="MyTemplate">
            <Expander Header="{Binding Path=Name}" Background="#FF97FF92" MinHeight="30" MinWidth="300" Margin="0,5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="tbName" Style="{StaticResource PropertyTextBlock}" Text="Наименование"/>
                    <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Диаметр, мм" Grid.Row="1"/>
                    <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Привязка по X, мм" Grid.Row="2"/>
                    <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Привязка по Y, мм" Grid.Row="3"/>
                    <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Симметричный по X" Grid.Row="4"/>
                    <TextBlock Style="{StaticResource PropertyTextBlock}" Text="Симметричный по Y" Grid.Row="5"/>
                    <TextBox x:Name="tbxName" Grid.Column="1" Style="{StaticResource PropertyTextBox}" Grid.Row="0" Text="{Binding Path=Name}"/>
                    <TextBox x:Name="tbxDiameter" Grid.Column="1" Style="{StaticResource PropertyTextBox}" Grid.Row="1" Text="{Binding Path=Diameter, Converter={StaticResource LinearSizeConverter}}"/>
                    <TextBox x:Name="tbxCenterX" Grid.Column="1" Style="{StaticResource PropertyTextBox}" Grid.Row="2" Text="{Binding Path=CoordX, Converter={StaticResource LinearSizeConverter}}"/>
                    <TextBox x:Name="tbxCenterY" Grid.Column="1" Style="{StaticResource PropertyTextBox}" Grid.Row="3" Text="{Binding Path=CoordY, Converter={StaticResource LinearSizeConverter}}"/>
                    <CheckBox x:Name="cbAddSymmetricX"  Grid.Column="1" Margin="5,7,20,0" Grid.Row="4" IsChecked="{Binding Path=AddSymmetricX}"/>
                    <CheckBox x:Name="cbAddSymmetricY"  Grid.Column="1" Margin="5,7,20,0" Grid.Row="5"  IsChecked="{Binding Path=AddSymmetricY}"/>
                    <TextBlock Grid.Column="2" Grid.Row="2" x:Name="tbDiameterMeasure" Style="{StaticResource PropertyTextBlock}" Text="мм" />
                    <TextBlock Grid.Column="2" Grid.Row="2" x:Name="tbCenterXMeasure" Style="{StaticResource PropertyTextBlock}" Text="мм" />
                    <TextBlock Grid.Column="2" Grid.Row="3" x:Name="tbCenterYMeasure" Style="{StaticResource PropertyTextBlock}" Text="мм" />
                </Grid>
            </Expander>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel x:Name="stpBoltBtns" Style="{StaticResource OperationStack}">
                <Button x:Name="btnAddBolt" Style="{StaticResource OperationButton}" ToolTip="Добавить болт" Click="BtnAddBolt_Click">
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
                    </Button.Effect>
                    <Image x:Name="AddBolt_png" Style="{StaticResource OperationButtonImage}" Source="{DynamicResource IconAdd30}" />
                </Button>
                <Button x:Name="btnDeleteBolt" Style="{StaticResource OperationButton}" ToolTip="Удалить болт" Click="BtnDeleteBolt_Click">
                    <Button.Effect>
                        <DropShadowEffect Opacity="0.6"/>
                    </Button.Effect>
                    <Image x:Name="DeleteBolt_png" Style="{StaticResource OperationButtonImage}" Source="{DynamicResource IconDelete30}"/>
                </Button>
            </StackPanel>
            <ListView x:Name="lvBoltsList" Margin="5" ItemTemplate="{StaticResource BoltTemplate}" Background="{x:Null}" Grid.RowSpan="2" ItemsSource="{Binding Path=SteelBolts, Mode=OneWay}">
            </ListView>
        </Grid>
        <StackPanel Height="60" Grid.Row="1" Margin="0,10,10,10" Orientation="Horizontal" HorizontalAlignment="Right" Background="#FFE2E2E2" Grid.Column="0">
            <Button x:Name="btnRefresh" Style="{StaticResource ServiceButton}" HorizontalAlignment="Stretch" Click="BtnRefresh_Click">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.6"/>
                </Button.Effect>
                <Image x:Name="Refresh_png" Style="{StaticResource ServiceButtonImage}" Source="{DynamicResource IconRefresh40}"/>
            </Button>
        </StackPanel>

        <StackPanel Height="60" Grid.Row="1" Margin="0,10,10,10" Orientation="Horizontal" HorizontalAlignment="Right" Background="#FFE2E2E2" Grid.Column="2">
            <Button x:Name="btnOK" Style="{StaticResource ServiceButton}" HorizontalAlignment="Stretch" Click="BtnOK_Click">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.6"/>
                </Button.Effect>
                <Image x:Name="OK_png" Style="{StaticResource ServiceButtonImage}" Source="{DynamicResource IconOK}"/>
            </Button>
            <Button x:Name="btnCancel" Style="{StaticResource ServiceButton}" HorizontalAlignment="Stretch" Click="BtnCancel_Click">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.6"/>
                </Button.Effect>
                <Image x:Name="Cancel_png" Style="{StaticResource ServiceButtonImage}" Source="{DynamicResource IconCancel}"/>
            </Button>
        </StackPanel>
        <Canvas x:Name="cvScetch" Width="200" Height="290"/>
    </Grid>
</Window>
