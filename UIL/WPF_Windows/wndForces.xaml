<Window x:Class="RDUIL.WPF_Windows.wndForces"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RDUIL.WPF_Windows"
        mc:Ignorable="d"
        Title="Усилие" Height="400" Width="620" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="ServiceButton" TargetType="Button">
            <Setter Property="Width" Value="100" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="Background" Value="#FFB5FCFF" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>
        <Style x:Key="ServiceButtonImage" TargetType="Image">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Stretch" Value="Fill" />
        </Style>
        <Style x:Key="PropertyTextBlock" TargetType="TextBlock">
            <Setter Property="Margin" Value="5" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="12" />
        </Style>
        <Style x:Key="PropertyTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="5" />
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="FontSize" Value="12" />
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
<StackPanel Grid.Column="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width ="*"/>
                        <ColumnDefinition Width ="150"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock x:Name="tbName" Style="{StaticResource PropertyTextBlock}" Text="Вид нагрузки"/>
                    <TextBlock x:Name="tbForce_Nz" Grid.Row="1" Style="{StaticResource PropertyTextBlock}" Text="Продольное усилие Nz, кН"/>
                    <TextBlock x:Name="tbForce_Mx" Grid.Row="2" Style="{StaticResource PropertyTextBlock}" Text="Изгибающий момент Mx, кН*м"/>
                    <TextBlock x:Name="tbForce_My" Grid.Row="3" Style="{StaticResource PropertyTextBlock}" Text="Изгибающий момент My, кН*м"/>
                    <TextBlock x:Name="tbForce_Qx" Grid.Row="4" Style="{StaticResource PropertyTextBlock}" Text="Поперечная сила Qx, кН"/>
                    <TextBlock x:Name="tbForce_Qy" Grid.Row="5" Style="{StaticResource PropertyTextBlock}" Text="Поперечная сила Qy, кН"/>
                    <TextBlock x:Name="tbPartiaSafetyFactor" Grid.Row="6" Style="{StaticResource PropertyTextBlock}" Text="Коэффициент надежности"/>
                    <TextBlock x:Name="tbIsDeadLoad" Grid.Row="7" Style="{StaticResource PropertyTextBlock}" Text="Постоянная нагрузка"/>
                    <TextBlock x:Name="tbBothSign" Grid.Row="8" Style="{StaticResource PropertyTextBlock}" Text="Знакопеременная нагрузка"/>
                    <TextBox x:Name="tbxName" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxForce_Nz" Grid.Row="1" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxForce_Mx" Grid.Row="2" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxForce_My" Grid.Row="3" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxForce_Qx" Grid.Row="4" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxForce_Qy" Grid.Row="5" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <TextBox x:Name="tbxPartialSafetyFactor" Grid.Row="6" Grid.Column="1" Style="{StaticResource PropertyTextBox}"/>
                    <CheckBox x:Name="cbIsDeadLoad" Content="" Grid.Column="1" HorizontalAlignment="Center" Margin="0" Grid.Row="7" VerticalAlignment="Center"/>
                    <CheckBox x:Name="cbBothSign" Content="" Grid.Column="1" HorizontalAlignment="Center" Margin="0" Grid.Row="8" VerticalAlignment="Center"/>
                </Grid>
        </StackPanel>
            <Image x:Name="image" Margin="5" Source="pack://siteoforigin:,,,/Resources/FoudationForce.jpg"/>
        </Grid>
        
        <StackPanel Height="60" Grid.Row="1" Margin="10" Orientation="Horizontal" Grid.ColumnSpan="3" HorizontalAlignment="Right" Background="#FFE2E2E2">
            <Button x:Name="btnOK" Style="{StaticResource ServiceButton}" HorizontalAlignment="Stretch" Click="btnOK_Click">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.6"/>
                </Button.Effect>
                <Image x:Name="OK_png" Style="{StaticResource ServiceButtonImage}" Source="pack://siteoforigin:,,,/Resources/IconOK.png"/>
            </Button>
            <Button x:Name="btnCancel" Style="{StaticResource ServiceButton}" HorizontalAlignment="Stretch" Click="btnCancel_Click">
                <Button.Effect>
                    <DropShadowEffect Opacity="0.6"/>
                </Button.Effect>
                <Image x:Name="Cancel_png" Style="{StaticResource ServiceButtonImage}" Source="pack://siteoforigin:,,,/Resources/IconCancel.png"/>
            </Button>
        </StackPanel>
    </Grid>
</Window>
